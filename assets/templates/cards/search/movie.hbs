<movie class="search-result" data-tmdb-id="{{movie.id}}">
    {{#if movie.poster_path}}
        <div class="img">
            <img height="64" width="auto" class="card-img-left" src="https://image.tmdb.org/t/p/w400_and_h600_bestv2{{{movie.poster_path}}}">
        </div>
    {{/if}}
    <div class="card-body">
        <h5 class="card-title">{{movie.title}}</h5>
        <h6 class="card-subtitle text-muted">{{movie.year}}</h6>
    </div>
</movie>